<div class="standard-form">
    <!-- 1. 名称 -->
    <div class="form-group">
        <label>显示名称</label>
        <div class="form-fields">
            <input type="text" name="label" value="{{label}}" placeholder="例如：烈火燎原" />
        </div>
    </div>

    <!-- 2. 范围 -->
    <div class="form-group">
        <label>半径范围 (格)</label>
        <div class="form-fields">
            <input type="number" name="distance" value="{{distance}}" step="1" min="1" autofocus />
        </div>
    </div>

    <!-- 3. 颜色 -->
    <div class="form-group">
        <label>显示颜色</label>
        <div class="form-fields">
            <!-- V13 推荐直接用 input type="color"，兼容性最好 -->
            <input type="color" name="color" value="{{color}}"
                style="height: 30px; width: 100%; cursor: pointer; border: none; padding: 0;" />
        </div>
    </div>

    <!-- 4. 模式 -->
    <div class="form-group">
        <label>放置模式</label>
        <div class="form-fields">
            <select name="mode">
                {{selectOptions modes selected=defaultMode}}
            </select>
        </div>
    </div>

    <!-- 提示信息 -->
    <p class="notes" style="margin: 0.5rem 0; font-size: 0.85em; color: var(--color-text-light-5);">
        {{#if hasToken}}
        <i class="fas fa-link"></i> 当前选中: <strong>{{tokenName}}</strong>
        {{else}}
        <i class="fas fa-info-circle"></i> 选中 Token 后可启用跟随模式。
        {{/if}}
    </p>

    <!-- 底部按钮 -->
    <footer class="form-footer">
        <button type="button" data-action="create" class="save-button">
            <i class="fas fa-check"></i> 生成区域
        </button>
    </footer>
</div>