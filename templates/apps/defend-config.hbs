<div id="{{formId}}" class="xjzl-rc-root">
    
    {{!-- 1. 信息展示区 (深色背景框) --}}
    <div style="background:rgba(0,0,0,0.2); padding:10px; border-radius:4px; margin-bottom:10px; border:1px solid var(--color-border-light-2); text-align:center;">
        <div style="display:flex; justify-content:space-between; margin-bottom:5px;">
            <span style="color:#aaa;">{{localize "XJZL.UI.DefendConfig.EnemyTotal"}}</span>
            <span style="font-weight:bold; color:#ff6400; font-size:1.2em;">{{attackTotal}}</span>
        </div>
        <div style="display:flex; justify-content:space-between;">
            <span style="color:#aaa;">{{localize "XJZL.UI.DefendConfig.MyKanpo"}}</span>
            <span style="font-weight:bold; color:#eee; font-size:1.2em;">{{kanpoBase}}</span>
        </div>
        
        {{!-- 显示当前的自动优劣势状态 --}}
        <div style="margin-top:8px; padding-top:8px; border-top:1px dashed rgba(255,255,255,0.1); font-size:0.9em; color:#888;">
            当前状态: 
            {{#if (gt autoLevel 0)}}<span style="color:#2ecc71">优势 ({{autoLevel}})</span>
            {{else if (lt autoLevel 0)}}<span style="color:#e74c3c">劣势 ({{autoLevel}})</span>
            {{else}}<span>平 (0)</span>{{/if}}
        </div>
    </div>

    {{!-- 2. 额外加值 --}}
    <div class="xjzl-rc-row">
        <label class="xjzl-rc-label">{{localize "XJZL.UI.DefendConfig.Bonus"}}</label>
        <input type="number" name="bonus" value="0" placeholder="0" class="xjzl-rc-input-num" />
    </div>

    {{!-- 3. 手动优劣势修正 --}}
    <div class="xjzl-rc-row">
        <div class="xjzl-rc-label-group">
            <label class="xjzl-rc-label">{{localize "XJZL.UI.DefendConfig.Level"}}</label>
            <span class="xjzl-rc-hint">{{localize "XJZL.UI.DefendConfig.LevelHint"}}</span>
        </div>
        
        <div class="xjzl-rc-counter">
            <button type="button" data-action="decrease" data-target="manualLevel"><i class="fas fa-minus"></i></button>
            <input type="number" name="manualLevel" value="0" readonly />
            <button type="button" data-action="increase" data-target="manualLevel"><i class="fas fa-plus"></i></button>
        </div>
    </div>

</div>