<div class="xjzl-content-content">
    <div class="xjzl-cb-stats-bar">
        <span>共找到 <strong>{{totalCount}}</strong> 件物品
            {{#if isClipped}}<span class="warning">(仅显示前 {{displayCount}} 件)</span>{{/if}}
        </span>
    </div>

    <div class="xjzl-cb-grid">
        {{#each items}}
        <div class="xjzl-cb-card" data-uuid="{{this.uuid}}" data-action="openSheet" draggable="true"
            data-drag-data='{ "type": "Item", "uuid": "{{this.uuid}}" }'
            data-type="{{this.type}}" data-quality="{{this.system.quality}}" data-tier="{{this.system.tier}}">

            <img src="{{this.img}}" loading="lazy" />
            <div class="xjzl-cb-card-info">
                <div class="name">{{this.name}}</div>
                {{#if this.packLabel}}
                <div class="source">{{this.packLabel}}</div>
                {{/if}}
            </div>
        </div>
        {{/each}}

        {{#unless totalCount}}
        <div class="no-results">
            <p>没有找到符合条件的物品。</p>
        </div>
        {{/unless}}
    </div>
</div>