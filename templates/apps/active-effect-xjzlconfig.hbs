<section class="tab" data-group="sheet" data-tab="xjzl-config">
    <div style="padding: 10px;">
        <h3 class="form-header"><i class="fas fa-cogs"></i> {{localize "XJZL.Effect.ConfigTitle"}}</h3>

        <fieldset style="border: 1px solid #7a7971; border-radius: 5px; padding: 10px; margin-bottom: 10px;">
            <legend>{{localize "XJZL.Effect.Stacking"}}</legend>
            <div class="form-group">
                <label>{{localize "XJZL.Effect.Slug"}}</label>
                <div class="form-fields">
                    <input type="text" name="flags.xjzl-system.slug" value="{{xjzl.slug}}"
                        placeholder="{{xjzl.autoSlug}}">
                </div>
            </div>
            <div class="form-group">
                <label style="flex: 0 0 auto; margin-right: 10px; font-weight: bold;">
                    {{localize "XJZL.Effect.Stackable"}}
                </label>

                {{!-- 右侧区域 --}}
                <div class="form-fields" style="justify-content: flex-start; gap: 5px; align-items: center;">

                    <label class="checkbox" style="flex: 0 0 auto; margin: 0; white-space: nowrap; font-size: inherit;">
                        <input type="checkbox" name="flags.xjzl-system.stackable" {{checked xjzl.isStackable}}>
                        {{localize "XJZL.Effect.EnableStacking"}}
                    </label>

                    {{!-- 分隔线 --}}
                    <span style="border-left: 1px solid #7a7971; height: 14px; margin: 0 5px; display: block;"></span>

                    <label style="flex: 0 0 auto; margin: 0; white-space: nowrap; font-size: inherit;">
                        {{localize "XJZL.Effect.MaxStacks"}}
                    </label>

                    <input type="number" name="flags.xjzl-system.maxStacks" value="{{xjzl.maxStacks}}" placeholder="0"
                        style="flex: 0 0 40px; min-width: 40px; text-align: center; height: 26px;">
                </div>
            </div>
        </fieldset>

        <div class="header-action"
            style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 5px; border-bottom: 1px solid #7a7971; padding-bottom: 5px;">
            <h3 class="form-header" style="border: none; margin: 0;"><i class="fas fa-scroll"></i> {{localize
                "XJZL.Effect.Scripts"}}</h3>
            <button type="button" data-action="add-script"
                style="width: auto; height: 24px; line-height: 20px; font-size: 0.8em;">
                <i class="fas fa-plus"></i> {{localize "XJZL.Effect.AddScript"}}
            </button>
        </div>

        <div class="xjzl-script-list">
            {{#each xjzl.scripts as |script i|}}
            <div class="xjzl-script-item"
                style="border: 1px solid #ccc; border-radius: 4px; padding: 5px; margin-bottom: 5px; background: rgba(0,0,0,0.05);">
                <div class="script-header-row"
                    style="display: flex; align-items: center; gap: 5px; margin-bottom: 5px;">
                    <i class="fas fa-code" style="color: #555;"></i>
                    <input type="text" name="flags.xjzl-system.scripts.{{i}}.label" value="{{script.label}}"
                        style="flex: 1; height: 24px;">
                    <select name="flags.xjzl-system.scripts.{{i}}.trigger" style="flex: 0 0 120px; height: 26px;">
                        {{selectOptions ../xjzl.triggerChoices selected=script.trigger localize=true}}
                    </select>
                    <label class="active-toggle" style="display: flex; align-items: center; cursor: pointer;">
                        <input type="checkbox" name="flags.xjzl-system.scripts.{{i}}.active" {{checked script.active}}>
                    </label>
                    <a data-action="delete-script" data-index="{{i}}" class="delete-btn"
                        style="color: darkred; cursor: pointer; padding: 0 5px;">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
                <textarea name="flags.xjzl-system.scripts.{{i}}.script" class="script-editor"
                    style="width: 100%; min-height: 100px; font-family: monospace; font-size: 0.9em; resize: vertical;">{{script.script}}</textarea>
            </div>
            {{else}}
            <p class="notes" style="text-align:center;">{{localize "XJZL.Effect.NoScripts"}}</p>
            {{/each}}
        </div>
    </div>
</section>