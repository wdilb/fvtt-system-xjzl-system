<div id="{{formId}}" class="xjzl-rc-root">
    
    {{!-- 0. 当前状态显示 (信息面板) --}}
    <div class="xjzl-rc-info-panel">
        {{!-- 基础等级 --}}
        <div class="xjzl-rc-row" style="height: 24px; min-height: 0;">
            {{!-- 例如: 体魄 等级 --}}
            <label class="xjzl-rc-label" style="font-size: 0.9em; color: #555;">
                {{label}} {{localize "XJZL.UI.AttributeTest.LevelSuffix"}}
            </label>
            <span style="font-weight: bold;">{{baseVal}}</span>
        </div>

        {{!-- 系统加值 (如果有) --}}
        {{#if sysBonus}}
        <div class="xjzl-rc-row" style="height: 24px; min-height: 0;">
            <label class="xjzl-rc-label" style="font-size: 0.9em; color: #555;">{{localize "XJZL.UI.AttributeTest.SysBonus"}}</label>
            <span style="font-weight: bold; color: {{#if (gt sysBonus 0)}}darkgreen{{else}}darkred{{/if}};">
                {{numberFormat sysBonus sign=true}}
            </span>
        </div>
        {{/if}}

        {{!-- 系统优劣势 --}}
        <div class="xjzl-rc-row" style="height: 24px; min-height: 0;">
            <label class="xjzl-rc-label" style="font-size: 0.9em; color: #555;">{{localize "XJZL.UI.AttributeTest.SysLevel"}}</label>
            <span style="font-weight: bold;">
                {{#if (gt sysLevel 0)}}
                    <i class="fas fa-angle-double-up" style="color: green;"></i> 
                    {{localize "XJZL.UI.AttributeTest.Advantage"}} ({{sysLevel}})
                {{else if (lt sysLevel 0)}}
                    <i class="fas fa-angle-double-down" style="color: red;"></i> 
                    {{localize "XJZL.UI.AttributeTest.Disadvantage"}} ({{sysLevel}})
                {{else}}
                    <span style="color: #777;">{{localize "XJZL.UI.AttributeTest.NoLevel"}}</span>
                {{/if}}
            </span>
        </div>
    </div>

    <hr class="xjzl-rc-sep">

    {{!-- 1. 玩家手动加值 --}}
    <div class="xjzl-rc-row">
        <label class="xjzl-rc-label">{{localize "XJZL.UI.AttributeTest.TempBonus"}}</label>
        <input type="number" name="bonus" value="{{defaultBonus}}" placeholder="0" class="xjzl-rc-input-num" />
    </div>

    <div class="xjzl-rc-row">
        <div class="xjzl-rc-label-group">
            <label class="xjzl-rc-label">{{localize "XJZL.UI.AttributeTest.TempLevel"}}</label>
            <span class="xjzl-rc-hint">{{localize "XJZL.UI.AttributeTest.StackHint"}}</span>
        </div>
        
        {{!-- 2. 玩家手动层级 --}}
        <div class="xjzl-rc-counter">
            <button type="button" data-action="decrease" data-target="level"><i class="fas fa-minus"></i></button>
            <input type="number" name="level" value="{{defaultLevel}}" readonly />
            <button type="button" data-action="increase" data-target="level"><i class="fas fa-plus"></i></button>
        </div>
    </div>

</div>