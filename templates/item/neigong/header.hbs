<aside class="xjzl-sidebar {{tierClass}} {{elementClass}}" data-application-part="header">

    {{!-- 1. 物品图标 (改为方形卡片式) --}}
    <div class="portrait-wrapper" data-action="editImage" title="点击更换图标">
        <img src="{{document.img}}">
        {{!-- 这里可以加一个边框光效层 --}}
        <div class="tier-glow"></div>
    </div>

    {{!-- 2. 信息填写区 --}}
    <div class="xjzl-sidebar__content" style="margin-top: 0;">
        {{!-- 标题 --}}
        <div class="xjzl-ink-field" style="border:none; padding:0; background:transparent; margin-bottom: 20px;">
            <input type="text" name="name" value="{{document.name}}" class="title-input"
                placeholder="{{localize 'XJZL.Neigong.NamePlaceholder'}}">
        </div>
        {{!-- 基础配置 --}}
        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.Neigong.Tier"}}</label>
            <select name="system.tier">
                {{selectOptions tierChoices selected=system.tier}}
            </select>
        </div>

        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.Info.Sect" fallback="{{localize 'XJZL.Neigong.Sect'}}"}}</label>
            <select name="system.sect">
                {{!-- blank="" 允许留空（江湖散人/无门派） --}}
                {{selectOptions sects selected=system.sect localize=true blank=""}}
            </select>
        </div>

        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.Neigong.Element"}}</label>
            <select name="system.element">
                {{selectOptions elementChoices selected=system.element localize=true}}
            </select>
        </div>

        <div class="xjzl-ink-field" style="display:block;">
            <label>{{localize "XJZL.Info.Description"}}</label>

            <div class="xjzl-sidebar-editor">
                <prose-mirror name="system.description" data-document-u-u-i-d="{{document.uuid}}"
                    value="{{system.description}}" toggled="false" button="true">
                    {{{enrichedDescription}}}
                </prose-mirror>
            </div>
        </div>

        <div class="xjzl-ink-field" style="border-left-color: var(--c-mp-blue);">
            <label><i class="fas fa-robot"></i> {{localize "XJZL.AutomationNote"}}</label>
            <input type="text" name="system.automationNote" value="{{system.automationNote}}"
                placeholder="{{localize 'XJZL.Neigong.AutomationPlaceholder'}}">
        </div>
    </div>

    <!-- ================================================== -->
    <!-- 关键数据保护 (Hidden Inputs)                       -->
    <!-- 必须包含这些，否则保存物品时会将修为重置为0        -->
    <!-- ================================================== -->
    <input type="hidden" name="system.xpInvested" value="{{system.xpInvested}}">
    <input type="hidden" name="system.sourceBreakdown.general" value="{{system.sourceBreakdown.general}}">
    <input type="hidden" name="system.sourceBreakdown.specific" value="{{system.sourceBreakdown.specific}}">
    <input type="hidden" name="system.active" value="{{system.active}}">
</aside>