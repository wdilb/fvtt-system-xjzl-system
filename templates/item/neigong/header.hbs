<header class="xjzl-header">
    {{!-- 左侧：图标 --}}
    <img class="char-portrait" src="{{document.img}}" data-edit="img"
        style="flex: 0 0 64px; height: 64px; margin-right: 10px;" />

    {{!-- 右侧：信息主体 (占满剩余空间) --}}
    <div class="xjzl-flex-col xjzl-grow">

        {{!-- 第一行：名称 --}}
        <input type="text" name="name" value="{{document.name}}" class="xjzl-input"
            style="font-size: 1.5em; text-align: left; width: 100%; margin-bottom: 5px;" />

        {{!-- 第二行：品阶与五行 --}}
        <div class="xjzl-grid-2" style="margin-bottom: 5px;">
            <div class="xjzl-flex-col" style="gap: 2px;">
                <label>{{localize "XJZL.Neigong.Tier"}}</label>
                <select name="system.tier">
                    {{selectOptions tierChoices selected=system.tier}}
                </select>
            </div>

            <div class="xjzl-flex-col" style="gap: 2px;">
                <label>{{localize "XJZL.Neigong.Element"}}</label>
                <select name="system.element">
                    {{selectOptions elementChoices selected=system.element}}
                </select>
            </div>
        </div>

        <div class="form-group stacked">
            <label style="font-weight:bold;">{{localize "XJZL.Item.Description"}}</label>
            {{editor system.description target="system.description" button=true owner=owner editable=editable}}
        </div>

        {{!-- 第三行：自动化说明 (移到这里，宽度自适应) --}}
        <div class="form-group"
            style="margin-top: 5px; display:flex; flex-direction: column; align-items: flex-start; gap: 2px;">
            <label style="font-weight:bold; color:#2c3e50; font-size: 0.9em;">
                <i class="fas fa-robot"></i> {{localize "XJZL.AutomationNote"}}
            </label>
            <div class="form-fields" style="width: 100%;">
                <input type="text" name="system.automationNote" value="{{system.automationNote}}" class="xjzl-input"
                    placeholder="{{localize 'XJZL.AutomationNotePlaceholder'}}"
                    title="{{localize 'XJZL.AutomationNoteHint'}}"
                    style="background: rgba(0,0,0,0.02); border-bottom: 1px dashed #ccc; font-size: 0.9em; width: 100%;" />
            </div>
        </div>

    </div>
</header>