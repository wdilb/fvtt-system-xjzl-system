<aside class="xjzl-sidebar">
    {{!-- 1. 头像区域 (带有羽化遮罩) --}}
    <div class="portrait-wrapper" style="height: 280px; position: relative; overflow: hidden;">
        <img src="{{document.img}}" data-edit="img"
            style="width: 100%; height: 100%; object-fit: cover; filter: sepia(0.3) contrast(1.1);">
        {{!-- 底部羽化 --}}
        <div
            style="position:absolute; bottom:0; left:0; width:100%; height:80px; background: linear-gradient(to bottom, transparent, var(--c-accent-bg));">
        </div>
    </div>

    {{!-- 2. 信息填写区 --}}
    <div class="xjzl-sidebar__content">
        {{!-- 竖排大标题 --}}
        <div class="xjzl-ink-field" style="border:none; padding:0; background:transparent;">
            <input type="text" name="name" value="{{document.name}}"
                style="font-family: var(--font-title); font-size: 32px; text-align: center; border-bottom: 2px solid var(--c-cinnabar);"
                placeholder="功法名称">
        </div>

        <div style="height: 20px;"></div>

        {{!-- 基础配置 --}}
        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.Neigong.Tier"}}</label>
            <select name="system.tier">
                {{selectOptions tierChoices selected=system.tier}}
            </select>
        </div>

        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.Neigong.Element"}}</label>
            <select name="system.element">
                {{selectOptions elementChoices selected=system.element localize=true}}
            </select>
        </div>

        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.Info.Description"}}</label>
            <textarea name="system.description" rows="4" style="resize: none;">{{system.description}}</textarea>
        </div>

        {{!-- 自动化提示 --}}
        <div class="xjzl-ink-field" style="border-left-color: var(--c-mp-blue);">
            <label><i class="fas fa-robot"></i> {{localize "XJZL.AutomationNote"}}</label>
            <input type="text" name="system.automationNote" value="{{system.automationNote}}" placeholder="如: 攻击判定+2">
        </div>
    </div>
</aside>