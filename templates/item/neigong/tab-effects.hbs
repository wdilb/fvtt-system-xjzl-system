<section class="tab scroll-area {{#if (eq tabs.primary 'effects')}}active{{/if}}" 
         data-group="primary" 
         data-tab="effects">

    <div class="xjzl-flex-col">
        {{!-- 提示文本 --}}
        <p style="font-size:0.8em; color:#666;">
            在此配置内功专用的buff/debuff(Active Effects)。普通的属性修正请在圆满特效配置。
        </p>
        
        {{#each effects as |effect|}}
        <div class="xjzl-card xjzl-flex-row" style="align-items: center; padding: 5px; margin-bottom: 5px;">
            {{!-- 图标 --}}
            <img src="{{effect.img}}" width="32" height="32" style="border:1px solid #000; margin-right: 8px;"/>
            
            {{!-- 名称与状态 --}}
            <div class="xjzl-flex-col xjzl-grow" style="gap:0; justify-content: center;">
                <span style="font-weight:bold; {{#if effect.disabled}}color:#999; text-decoration:line-through;{{/if}}">
                    {{effect.name}}
                </span>
                {{#if effect.disabled}}
                <span style="font-size: 0.7em; color: #999;">(已禁用)</span>
                {{/if}}
            </div>

            {{!-- 操作按钮 --}}
            <div class="xjzl-flex-row" style="gap: 5px;">
                <a data-action="toggleEffect" data-id="{{effect.id}}" title="启用/禁用" style="color: #555; padding: 0 5px;">
                    <i class="fas {{#if effect.disabled}}fa-toggle-off{{else}}fa-toggle-on{{/if}}"></i>
                </a>
                <a data-action="editEffect" data-id="{{effect.id}}" title="编辑" style="color: #555; padding: 0 5px;">
                    <i class="fas fa-edit"></i>
                </a>
                <a data-action="deleteEffect" data-id="{{effect.id}}" title="删除" style="color: #999; padding: 0 5px;">
                    <i class="fas fa-trash"></i>
                </a>
            </div>
        </div>
        {{else}}
        {{!-- 空状态提示 --}}
        <div style="text-align: center; color: #999; font-style: italic; padding: 20px; border: 1px dashed #ccc; border-radius: 4px;">
            暂无被动特效
        </div>
        {{/each}}

        {{!-- 新建按钮 --}}
        <button type="button" data-action="createEffect" style="margin-top:10px;">
            <i class="fas fa-bolt"></i> 新建特效
        </button>
    </div>

</section>