<section class="tab xjzl-body xjzl-body-scroll {{#if (eq tabs.primary 'effects')}}active{{/if}}" data-tab="effects"
    data-group="primary">

    <div class="xjzl-bg-deco">效</div>

    <div style="margin-bottom: 20px;">
        <button type="button" data-action="createEffect" class="xjzl-btn-seal">
            <i class="fas fa-plus"></i> 新建特效
        </button>
    </div>

    {{#each effects as |effect|}}
    <div class="xjzl-item-card">
        <div class="info" style="display: flex; align-items: center; gap: 10px;">
            <img src="{{effect.img}}" width="32" height="32"
                style="border-radius: 4px; border: 1px solid var(--c-ink-light);">
            <div>
                <h4>{{effect.name}}</h4>
                <div class="tags">{{#if effect.disabled}}已禁用{{else}}生效中{{/if}}</div>
            </div>
        </div>
        <div class="controls" style="display: flex; gap: 5px;">
            <a data-action="toggleEffect" data-id="{{effect.id}}"><i class="fas fa-power-off"></i></a>
            <a data-action="editEffect" data-id="{{effect.id}}"><i class="fas fa-edit"></i></a>
            <a data-action="deleteEffect" data-id="{{effect.id}}"><i class="fas fa-trash"></i></a>
        </div>
    </div>
    {{/each}}
</section>