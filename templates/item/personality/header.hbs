<header class="xjzl-header">
    {{!-- 使用 data-action="editImage" --}}
    <img class="char-portrait" src="{{document.img}}" data-action="editImage" data-edit="img"
        title="{{localize 'XJZL.UI.EditImage'}}" />

    <div class="xjzl-flex-col xjzl-grow">
        <input type="text" name="name" value="{{document.name}}" class="xjzl-input-title"
            placeholder="{{localize 'XJZL.Personality.NamePlaceholder'}}" />
        <div class="xjzl-meta-row flexrow" style="align-items: center; margin-top: 5px;">
            <span class="xjzl-tag">{{localize "TYPES.Item.personality"}}</span>

            {{#if isGM}}
            <button type="button" class="xjzl-icon-btn {{#if isEditing}}active{{/if}}" data-action="toggleEditing"
                title="{{localize 'XJZL.Personality.ConfigBtnTitle'}}" style="flex: 0 0 100px;">
                <i class="fas fa-cog"></i>
                {{#if isEditing}}
                {{localize "XJZL.Personality.ConfigBtnExit"}}
                {{else}}
                {{localize "XJZL.Personality.ConfigBtnEnter"}}
                {{/if}}
            </button>
            {{/if}}
        </div>
    </div>
</header>