{{!-- 注意：不要写 <form> 标签，系统会自动包裹 --}}
{{!-- 最外层包裹一个 div，作为唯一的根元素 --}}
<div class="scroll-area">
    {{!-- 头部信息 --}}
    <header class="sheet-header flex-row" style="margin-bottom: 10px;">
        <img src="{{document.img}}" data-action="onEditImage" title="{{document.name}}" style="height: 64px; width: 64px; border: 2px solid #5c4033; object-fit: cover;"/>
        <div style="flex: 1; margin-left: 10px;">
            <input name="name" type="text" value="{{document.name}}" placeholder="物品名称" style="font-size: 1.5em; width: 100%;"/>
        </div>
    </header>

    {{!-- 内功专用配置 --}}
    {{#if isNeigong}}
    <div class="form-group grid-2col">
        <label>品阶 (1=人, 2=地, 3=天)
            <input type="number" name="system.tier" value="{{system.tier}}"/>
        </label>
        <label>已投入修为
            <input type="number" name="system.xpInvested" value="{{system.xpInvested}}"/>
        </label>
    </div>
    
    <hr>
    
    <h3>阶段属性配置</h3>
    <div class="stage-config" style="border: 1px solid #ccc; padding: 5px;">
        <h4>领悟 (Stage 1)</h4>
        <div class="grid-3col">
            <label>力量 <input type="number" name="system.config.stage1.stats.liliang" value="{{system.config.stage1.stats.liliang}}"/></label>
            <label>内息 <input type="number" name="system.config.stage1.stats.neixi" value="{{system.config.stage1.stats.neixi}}"/></label>
            <label>体魄 <input type="number" name="system.config.stage1.stats.tipo" value="{{system.config.stage1.stats.tipo}}"/></label>
        </div>
    </div>
    {{/if}}
</div>