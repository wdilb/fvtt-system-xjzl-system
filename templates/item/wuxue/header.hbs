<header class="xjzl-header">
    <img class="char-portrait" src="{{document.img}}" data-edit="img" style="flex:0 0 64px; height:64px;"/>
    <div class="xjzl-flex-col xjzl-grow">
        <input type="text" name="name" value="{{document.name}}" class="xjzl-input" style="font-size:1.5em; text-align:left; width:100%;"/>
        
        <div class="xjzl-grid-3">
            <select name="system.category" class="xjzl-input">
                {{selectOptions choices.categories selected=system.category}}
            </select>
            <select name="system.tier" class="xjzl-input">
                {{selectOptions choices.tiers selected=system.tier}}
            </select>
            <input type="text" name="system.sect" value="{{system.sect}}" class="xjzl-input" placeholder="门派/势力"/>
        </div>
    </div>

    {{!-- 武学总体描述 --}}
    <div class="xjzl-card" style="margin-bottom: 10px; padding: 5px;">
        <label style="font-weight:bold; font-size:0.9em;">{{localize "XJZL.Info.Description"}}</label>
        {{editor system.description target="system.description" button=true owner=owner editable=editable style="min-height: 100px;"}}
    </div>
</header>