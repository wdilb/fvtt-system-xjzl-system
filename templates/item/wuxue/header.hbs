<aside class="xjzl-sidebar" data-application-part="header">
    <div class="portrait-wrapper" data-action="editImage" title="{{localize 'XJZL.UI.EditImage'}}">
        <img src="{{document.img}}">
    </div>

    <div class="xjzl-sidebar__content">
        {{!-- 标题 --}}
        <div class="xjzl-ink-field" style="border:none; padding:0; background:transparent; margin-bottom: 15px;">
            <input type="text" name="name" value="{{document.name}}"
                placeholder="{{localize 'XJZL.Wuxue.NamePlaceholder'}}">
        </div>

        {{!-- 基础信息 --}}
        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.Wuxue.Category"}}</label>
            <select name="system.category">
                {{selectOptions choices.categories selected=system.category}}
            </select>
        </div>

        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.Wuxue.Tier"}}</label>
            <select name="system.tier">
                {{selectOptions choices.tiers selected=system.tier}}
            </select>
        </div>

        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.Wuxue.Sect"}}</label>
            <select name="system.sect">
                {{selectOptions choices.sects selected=system.sect localize=true}}
            </select>
        </div>

        {{!-- 简介 (上移到侧边栏，作为总纲) --}}
        <div class="xjzl-ink-field" style="border-left-color: var(--c-theme-main);">
            <label>{{localize "XJZL.Info.Description"}}</label>
            <textarea name="system.description" rows="4" style="font-size:12px;">{{system.description}}</textarea>
        </div>
    </div>
</aside>