<aside class="xjzl-sidebar" data-application-part="header">
    <div class="portrait-wrapper" data-action="editImage" title="{{localize 'XJZL.UI.EditImage'}}">
        <img src="{{document.img}}">
    </div>

    <div class="xjzl-sidebar__content">
        {{!-- 标题 --}}
        <div class="xjzl-ink-field" style="border:none; padding:0; background:transparent; margin-bottom: 20px;">
            <input type="text" name="name" value="{{document.name}}" placeholder="装备名称">
        </div>

        {{!-- 基础属性 --}}
        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.Qualities.Label"}}</label>
            <select name="system.quality">
                {{selectOptions choices.qualities selected=system.quality}}
            </select>
        </div>

        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.Equipment.Price"}}</label>
            <input type="number" name="system.price" value="{{system.price}}">
        </div>

        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.Equipment.Quantity"}}</label>
            <input type="number" name="system.quantity" value="{{system.quantity}}">
        </div>

        <div class="xjzl-ink-field" style="border-left-color: var(--c-cinnabar);">
            <label>{{localize "XJZL.Equipment.Equipped"}}</label>
            <div style="text-align:center; padding-top:2px;">
                {{#if system.equipped}}
                <i class="fas fa-check-circle" style="color:var(--c-cinnabar); font-size:16px;"></i>
                {{else}}
                <i class="fas fa-circle" style="color:#ccc; font-size:16px;"></i>
                {{/if}}
            </div>
        </div>

        {{!-- 自动化说明 --}}
        <div class="xjzl-ink-field" style="margin-top: 20px; border-left-color: #666;">
            <label><i class="fas fa-robot"></i> {{localize "XJZL.AutomationNote"}}</label>
            <input type="text" name="system.automationNote" value="{{system.automationNote}}"
                placeholder="{{localize 'XJZL.AutomationNotePlaceholder'}}">
        </div>
    </div>
</aside>