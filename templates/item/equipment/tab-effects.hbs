<section class="tab xjzl-body xjzl-body-scroll {{#if (eq tabs.primary 'effects')}}active{{/if}}" data-tab="effects"
    data-group="primary" data-application-part="effects">

    <div class="xjzl-bg-deco">æ•ˆ</div>

    <div style="margin-bottom: 20px; display: flex; justify-content: flex-end;">
        <button type="button" data-action="createEffect" class="xjzl-btn-seal">
            <i class="fas fa-plus"></i> {{localize "XJZL.UI.AddAttribute"}}
        </button>
    </div>

    {{#if effects.length}}
    <div class="effect-list">
        {{#each effects as |effect|}}
        <div class="xjzl-item-card {{#if effect.disabled}}disabled{{else}}enabled{{/if}}">
            <div class="status-bar"></div>
            <div class="info" style="display: flex; align-items: center; gap: 10px; flex: 1;">
                <img src="{{effect.img}}" width="36" height="36" class="icon"
                    style="border: 1px solid var(--c-ink-light); border-radius: 4px;">
                <div>
                    <h4>{{effect.name}}</h4>
                    <div class="tags">
                        {{#if effect.transfer}}{{localize "XJZL.Effect.PassiveTag"}}{{else}}{{localize
                        "XJZL.Effect.TriggerTag"}}{{/if}}
                        {{#if effect.disabled}} {{localize "XJZL.UI.StatusPausedHint"}}{{/if}}
                    </div>
                </div>
            </div>
            <div class="controls" style="display: flex; gap: 5px;">
                <a data-action="toggleEffect" data-id="{{effect.id}}" class="control-btn"><i
                        class="fas {{#if effect.disabled}}fa-toggle-off{{else}}fa-toggle-on{{/if}}"></i></a>
                <a data-action="editEffect" data-id="{{effect.id}}" class="control-btn"><i class="fas fa-edit"></i></a>
                <a data-action="deleteEffect" data-id="{{effect.id}}" class="control-btn"><i
                        class="fas fa-trash"></i></a>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="empty-state">
        <div class="watermark">{{localize "XJZL.UI.WatermarkNone"}}</div>
        <p>{{localize "XJZL.Equipment.NoBonuses"}}</p>
    </div>
    {{/if}}
</section>