<aside class="xjzl-sidebar" data-application-part="header">
    <div class="portrait-wrapper" data-action="editImage" title="{{localize 'XJZL.UI.EditImage'}}">
        <img src="{{document.img}}">
    </div>

    <div class="xjzl-sidebar__content">
        {{!-- 名称输入框 --}}
        <div class="xjzl-ink-field" style="border:none; padding:0; background:transparent; margin-bottom: 20px;">
            <input type="text" name="name" value="{{document.name}}" placeholder="物品名称">
        </div>

        {{!-- 基础属性：价格、重量、品质/品阶 --}}

        {{!-- 1. 品质/品阶 --}}
        <div class="xjzl-ink-field">
            {{#if (eq document.type 'manual')}}
            <label>{{localize "XJZL.Tiers.Label"}}</label>
            <select name="system.tier">
                {{selectOptions @root.tierChoices selected=system.tier}}
            </select>
            {{else}}
            <label>{{localize "XJZL.Qualities.Label"}}</label>
            <select name="system.quality">
                {{selectOptions @root.qualityChoices selected=system.quality}}
            </select>
            {{/if}}
        </div>

        {{!-- 2. 价格 --}}
        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.Equipment.Price"}}</label>
            <input type="number" name="system.price" value="{{system.price}}">
        </div>

        {{!-- 3. 数量 --}}
        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.Equipment.Quantity"}}</label>
            <input type="number" name="system.quantity" value="{{system.quantity}}">
        </div>

        {{!-- 4. 消耗品类型 (仅消耗品显示) --}}
        {{#if isConsumable}}
        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.Consumable.TypeLabel"}}</label>
            <select name="system.type">
                {{selectOptions consumableTypes selected=system.type}}
            </select>
        </div>
        {{/if}}

    </div>
</aside>