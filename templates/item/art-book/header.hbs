<aside class="xjzl-sidebar" data-application-part="header">
    <div class="portrait-wrapper" data-action="editImage" title="{{localize 'XJZL.UI.EditImage'}}">
        <img src="{{document.img}}">
    </div>

    <div class="xjzl-sidebar__content">
        {{!-- 标题 --}}
        <div class="xjzl-ink-field" style="border:none; padding:0; background:transparent; margin-bottom: 20px;">
            <input type="text" name="name" value="{{document.name}}"
                placeholder="{{localize 'XJZL.ArtBook.NamePlaceholder'}}">
        </div>

        {{!-- 关联技艺 --}}
        <div class="xjzl-ink-field">
            <label>{{localize "XJZL.ArtBook.ArtType"}}</label>
            <select name="system.artType">
                {{selectOptions choices.arts selected=system.artType}}
            </select>
        </div>

        {{!-- 统计信息 (只读) --}}
        <div class="xjzl-ink-field" style="border-left-color: var(--c-theme-main);">
            <label>{{localize "XJZL.ArtBook.XPInvested"}}</label>
            <div style="font-weight: bold; color: var(--c-theme-main);">
                {{system.xpInvested}} / {{totalCost}}
            </div>
        </div>

        <div class="xjzl-ink-field" style="border-left-color: var(--c-theme-main);">
            <label>{{localize "XJZL.ArtBook.TotalLevelReward"}}</label>
            <div style="font-weight: bold; color: var(--c-theme-main);">
                +{{totalLevelReward}} {{localize "XJZL.ArtBook.LevelSuffix"}}
            </div>
        </div>
    </div>
</aside>