<header class="xjzl-header">
    <img class="char-portrait" src="{{document.img}}" data-edit="img" style="flex:0 0 64px; height:64px;"/>
    
    <div class="xjzl-flex-col xjzl-grow">
        {{!-- 名称输入 --}}
        <input type="text" name="name" value="{{document.name}}" class="xjzl-input" style="font-size:1.5em; text-align:left; width:100%; margin-bottom: 5px;"/>
        
        <div class="xjzl-grid-2" style="gap: 10px;">
            {{!-- 关联技艺 --}}
            <div class="xjzl-flex-row">
                <label style="font-weight:bold;">{{localize "XJZL.Item.ArtBook.ArtType"}}</label>
                <select name="system.artType" class="xjzl-input">
                    {{selectOptions choices.arts selected=system.artType}}
                </select>
            </div>

            {{!-- 状态概览 (只读) --}}
            <div class="xjzl-flex-row" style="background: rgba(0,0,0,0.05); padding: 0 5px; border-radius: 4px;">
                <label style="font-size: 0.9em; color: #555;">{{localize "XJZL.Item.ArtBook.XPInvested"}}:</label>
                <span style="font-weight: bold; color: var(--xjzl-accent);">{{system.xpInvested}}</span>
                <span style="font-size: 0.8em; color: #888;"> / {{totalCost}}</span>
            </div>
        </div>
    </div>
</header>