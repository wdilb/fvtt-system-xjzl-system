<div class="xjzl-chat-card death-card">
    {{#if isDead}}
    {{!-- 死亡状态 --}}
    <header class="card-header"
        style="border-bottom: 2px solid #000; margin-bottom: 10px; padding-bottom: 5px; display: flex; align-items: center; gap: 8px;">
        <i class="fas fa-skull" style="font-size: 1.5em; color: #000;"></i>
        <h3 style="margin: 0; font-weight: 900; color: #000; font-size: 1.2em;">{{localize "XJZL.Status.Dead"}}</h3>
    </header>

    <div style="margin-bottom: 15px; color: #333; font-style: italic;">
        {{localize "XJZL.UI.Chat.DeathCard.DeadFlavor"}}
    </div>

    <button data-action="rollDeathSave" style="background: #333; color: white; border: 1px solid #000;">
        <i class="fas fa-dice-d20"></i> {{localize "XJZL.UI.Chat.DeathCard.DeathSave"}} (DC 10)
    </button>

    {{else}}
    {{!-- 濒死状态 --}}
    <header class="card-header"
        style="border-bottom: 2px solid #8b0000; margin-bottom: 10px; padding-bottom: 5px; display: flex; align-items: center; gap: 8px;">
        <i class="fas fa-procedures" style="font-size: 1.5em; color: #8b0000;"></i>
        <h3 style="margin: 0; font-weight: 900; color: #8b0000; font-size: 1.2em;">{{localize "XJZL.Status.Dying"}}</h3>
    </header>

    <div style="margin-bottom: 15px; color: #555; font-style: italic;">
        {{localize "XJZL.UI.Chat.DeathCard.DyingFlavor"}}
    </div>

    <button data-action="rollDisability" style="background: #8b0000; color: white; border: 1px solid #5a0000;">
        <i class="fas fa-crutch"></i> {{localize "XJZL.UI.Chat.DeathCard.RollDisability"}} (d100)
    </button>
    {{/if}}
</div>