<div class="xjzl-chat-card loot-card">

    {{!-- 1. 头部 --}}
    <header class="card-header" style="border-left: 4px solid var(--c-cinnabar);">
        <i class="fas fa-dice-d20" style="font-size: 24px; color: var(--c-cinnabar);"></i>
        <div>
            <h3 style="color: var(--c-cinnabar);">{{title}}</h3>
            <div style="font-size: 0.8em; color: #555;">
                成功抽取了 <b>{{items.length}}</b> 件物品
            </div>
        </div>
    </header>

    {{!-- 2. 列表内容 --}}
    <div class="loot-list">
        {{#each items}}
        <div class="loot-item {{this.colorClass}}" draggable="true"
            data-drag-data='{ "type": "Item", "uuid": "{{this.uuid}}" }'>

            {{!-- 图片 --}}
            <img src="{{this.img}}" class="item-img" title="{{this.name}}" />

            {{!-- 信息 --}}
            <div class="item-info">
                <div class="item-name">{{this.name}}</div>
                <div class="item-meta">
                    <span class="tag"
                        style="background:#444; color:#fff; padding:1px 4px; border-radius:2px;">{{this.label}}</span>
                    <span>{{localize (concat "TYPES.Item." this.type)}}</span>
                </div>
            </div>

            {{!-- 拖拽图标 --}}
            <i class="fas fa-hand-paper drag-icon" title="拖拽拾取"></i>
        </div>
        {{/each}}
    </div>

    <div style="padding: 8px 0; text-align: center; font-size: 0.75em; color: #999; font-style: italic;">
        将物品拖拽到角色栏即可获取
    </div>
</div>