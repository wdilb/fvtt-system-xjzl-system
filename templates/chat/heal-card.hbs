<div class="xjzl-chat-card heal-card">
    {{!-- 头部信息 --}}
    <header class="card-header" style="border-left: 4px solid {{color}};">
        <img src="{{img}}" title="{{name}}" />
        <div style="flex:1;">
            <h3 style="color: #2c3e50;">{{name}}</h3>
            {{!-- 简单的标签提示 --}}
            <div style="font-size:0.85em; color: #7f8c8d;">
                <i class="fas fa-sparkles"></i> 资源回复
            </div>
        </div>
    </header>

    <div class="card-content-wrapper">
        {{!-- 核心数值显示 (大号字体) --}}
        <div style="text-align: center; padding: 10px 0;">
            <div
                style="font-size: 2.2em; font-weight: bold; color: {{color}}; font-family: serif; text-shadow: 1px 1px 0px #fff; line-height: 1.2;">
                +{{amount}} <span style="font-size: 0.5em; vertical-align: middle; color: #555;">{{typeLabel}}</span>
            </div>

            {{!-- 当前值/最大值显示 --}}
            <div style="font-size: 0.9em; color: #555; margin-top: 8px; border-top: 1px dashed #ccc; padding-top: 5px;">
                当前: <b>{{newVal}}</b>
                {{#if maxVal}}
                <span style="color:#999;"> / {{maxVal}}</span>
                {{/if}}
            </div>
        </div>

        {{!-- 额外状态提示 (例如脱离濒死) --}}
        {{#if removedDying}}
        <div
            style="text-align:center; background:#e8f5e9; color:#27ae60; padding:4px; font-size:0.85em; border-radius:3px; margin-top:5px;">
            <i class="fas fa-heartbeat"></i> 伤势稳定，脱离濒死
        </div>
        {{/if}}
    </div>
</div>