<div class="xjzl-chat-card move-card" data-item-id="{{item.id}}" data-move-id="{{move.id}}">

    {{!-- 1. 头部 --}}
    {{#if isHeal}}
    <header class="card-header" style="border-left: 4px solid #27ae60;">
        <img src="{{move.img}}" title="{{move.name}}" />
        <div>
            <h3 style="color: #1e8449;"><i class="fas fa-heart-pulse"></i> {{move.name}}</h3>
            <div style="font-size: 0.8em; color: #555;">{{localize (concat "XJZL.Wuxue.Type." move.type)}} -
                {{item.name}}</div>
        </div>
    </header>
    {{else if isStance}}
    <header class="card-header" style="border-left: 4px solid #2980b9;">
        <img src="{{move.img}}" title="{{move.name}}" />
        <div>
            <h3 style="color: #2980b9;"><i class="fas fa-shield-alt"></i> {{move.name}}</h3>
            <div style="font-size: 0.8em; color: #555;">{{localize (concat "XJZL.Wuxue.Type." move.type)}} -
                {{item.name}}</div>
        </div>
    </header>
    {{else}}
    <header class="card-header" style="border-left: 4px solid #a63636;">
        <img src="{{move.img}}" title="{{move.name}}" />
        <div>
            <h3 style="color: #a63636;">{{move.name}}</h3>
            <div style="font-size: 0.8em; color: #555;">{{localize (concat "XJZL.Wuxue.Type." move.type)}} -
                {{item.name}}</div>
        </div>
    </header>
    {{/if}}

    <div class="card-content-wrapper">

        {{!-- 2. 描述详情 --}}
        {{#if (or move.description move.automationNote)}}
        <details class="card-details" {{#if isStance}}open{{/if}}>
            <summary><i class="fas fa-book-open"></i> {{localize "XJZL.UI.Chat.MoveCard.ShowDetails"}}</summary>
            <div class="card-description">
                {{#if move.description}}<div>{{{move.description}}}</div>{{/if}}
                {{#if move.automationNote}}
                <div style="margin-top:5px; padding-top:5px; border-top:1px dashed #ccc; color:#2c3e50;">
                    <!-- 修复：加回"自动化提示"的本地化标签 -->
                    <i class="fas fa-robot"></i> <b>{{localize "XJZL.Wuxue.AutomationNote"}}:</b>
                    {{move.automationNote}}
                </div>
                {{/if}}
            </div>
        </details>
        {{/if}}

        {{!-- 3. 检定结果 --}}
        {{#unless isStance}}
        {{#if attackRoll}}
        <div class="card-roll" style="margin-bottom: 15px;">
            <div class="roll-header">
                <div class="label">{{localize "XJZL.UI.Chat.MoveCard.RollHeader" type=damageTypeLabel}}</div>
                <div class="value">{{displayTotal}}</div>
                <div class="formula">{{attackRoll.formula}}</div>
                <!-- 修复：恢复 RollHint 本地化 -->
                <div class="hint">{{localize "XJZL.UI.Chat.MoveCard.RollHint"}}</div>
            </div>

            <div class="dice-tooltip" style="display:none;">{{{rollTooltip}}}</div>

            {{#if hasTargets}}
            <div style="margin-top:8px; padding:5px; background:rgba(0,0,0,0.03); border-radius:4px;">
                {{#each targetsResults as |res|}}
                <div style="display:flex; justify-content:space-between; font-size:0.9em; margin-bottom:2px;">
                    <span style="font-weight:bold;">{{res.name}}</span>
                    <span>
                        <b style="color:{{#if res.isHit}}green{{else}}red{{/if}};">{{res.total}}</b>
                        vs {{res.dodge}} <span style="color:#999;">({{res.stateLabel}})</span>
                    </span>
                </div>
                {{/each}}
            </div>
            {{/if}}
        </div>

        {{else}}
        <!-- 修复：找回了被 AI 删掉的“非攻击性招式（Buff/治疗）”的目标显示列表 -->
        {{#if hasTargets}}
        <div
            style="margin-bottom: 10px; font-size: 0.85em; background: rgba(0,0,0,0.02); padding: 5px; border-radius: 4px;">
            <div style="font-weight: bold; border-bottom: 1px dashed #ccc; margin-bottom: 3px;">
                {{localize "XJZL.UI.Chat.MoveCard.Targets"}}
            </div>
            {{#each targetsResults as |res|}}
            <div style="display:flex; justify-content:space-between;">
                <span>{{res.name}}</span>
                <span style="color: #666;">
                    {{#if ../isHeal}}
                    <i class="fas fa-check" style="color:green; font-size:0.8em;"></i> {{localize
                    "XJZL.UI.Chat.MoveCard.TargetReady"}}
                    {{else}}
                    <i class="fas fa-crosshairs" style="color:#666; font-size:0.8em;"></i> {{localize
                    "XJZL.UI.Chat.MoveCard.TargetSelected"}}
                    {{/if}}
                </span>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div style="margin-bottom: 10px; font-size: 0.8em; color: #666; font-style: italic; text-align: center;">
            {{localize "XJZL.UI.Chat.MoveCard.NoTargetSelfHint"}}
        </div>
        {{/if}}
        {{/if}}
        {{/unless}}

        {{!-- 4. 数值展示 --}}
        <!-- 修复：加回了 cost.rage 的判断 -->
        {{#if (or (gt calc.damage 0) (gt calc.feint 0) cost.mp cost.hp cost.rage)}}
        <div class="card-stats">
            {{#if (gt calc.damage 0)}}
            <div class="stat-block">
                <!-- 修复：恢复本地化标签 -->
                <div class="stat-label">
                    {{#if isHeal}}{{localize "XJZL.UI.Chat.MoveCard.HealAmount"}}{{else}}{{localize
                    "XJZL.UI.Chat.MoveCard.Damage"}}{{/if}}
                </div>
                <div class="stat-value" style="color: {{#if isHeal}}#27ae60{{else}}#a63636{{/if}};"
                    title="{{calc.breakdown}}">
                    {{calc.damage}}
                </div>
            </div>
            {{/if}}

            {{#if (gt calc.feint 0)}}
            <div class="stat-block">
                <!-- 修复：恢复本地化标签 -->
                <div class="stat-label">{{localize "XJZL.UI.Chat.MoveCard.FeintVal"}}</div>
                <div class="stat-value" style="color: #6a1b9a;" title="{{calc.feintBreakdown}}">{{calc.feint}}</div>
            </div>
            {{/if}}

            {{#if (or cost.mp cost.hp cost.rage)}}
            <div class="stat-block" style="text-align:left; padding-left:15px; font-size:0.85em;">
                <!-- 修复：恢复本地化标签 和 怒气消耗显示 -->
                {{#if cost.mp}}<div><b style="color:#2980b9">{{localize "XJZL.UI.Chat.MoveCard.Cost.MP"}}:</b>
                    {{cost.mp}}</div>{{/if}}
                {{#if cost.rage}}<div><b style="color:#c5a059">{{localize "XJZL.UI.Chat.MoveCard.Cost.Rage"}}:</b>
                    {{cost.rage}}</div>{{/if}}
                {{#if cost.hp}}<div><b style="color:#c0392b">{{localize "XJZL.UI.Chat.MoveCard.Cost.HP"}}:</b>
                    {{cost.hp}}</div>{{/if}}
            </div>
            {{/if}}
        </div>
        {{/if}}

        {{!-- 5. 按钮组 --}}
        {{#unless isStance}}
        <div class="card-buttons">
            {{#if isFeint}}
            <!-- 修复：恢复了 showFeintBtn 逻辑，如果当前没选中架招，会提示用户 -->
            {{#if showFeintBtn}}
            <button data-action="rollFeintContest" class="btn-check">
                <i class="fas fa-dice-d20"></i> {{localize "XJZL.UI.Chat.MoveCard.FeintContest"}}
            </button>
            {{else}}
            <div
                style="text-align:center; font-size:0.8em; color:#666; background:rgba(0,0,0,0.05); padding:4px; border-radius:4px; margin-bottom:5px;">
                {{localize "XJZL.UI.Chat.MoveCard.NoStanceHint"}}
            </div>
            {{/if}}
            {{/if}}

            {{#if (gt calc.damage 0)}}
            {{#if isHeal}}
            <button data-action="applyHeal" class="btn-heal"
                title="{{localize 'XJZL.UI.Chat.MoveCard.ApplyHealTitle'}}">
                <i class="fas fa-heart"></i> {{localize "XJZL.UI.Chat.MoveCard.ApplyHeal"}}
            </button>
            {{else}}
            <button data-action="applyDamage" class="btn-damage"
                title="{{localize 'XJZL.UI.Chat.MoveCard.ApplyDamageTitle'}}">
                <i class="fas fa-tint"></i> {{localize "XJZL.UI.Chat.MoveCard.ApplyDamage"}}
            </button>
            {{/if}}
            {{else}}
            {{#if (or isHeal isBuff)}}
            <button data-action="applyHeal" class="btn-effect">
                <i class="fas fa-magic"></i> {{localize "XJZL.UI.Chat.MoveCard.ApplyEffect"}}
            </button>
            {{/if}}
            {{/if}}
        </div>
        {{/unless}}
    </div>
</div>