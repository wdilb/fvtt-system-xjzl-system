<div class="xjzl-chat-card item-card" data-item-id="{{item.id}}">

    {{!-- 1. 头部 --}}
    <header class="card-header" style="border-left: 4px solid var(--c-cinnabar);">
        <!-- 修复：加回 title，鼠标悬停图片显示名字 -->
        <img src="{{item.img}}" title="{{item.name}}" />
        <div>
            <h3 style="color: var(--c-cinnabar);">{{item.name}}</h3>
            <div style="font-size: 0.8em; color: #555;">
                <span style="background: #333; color: #fff; padding: 0 4px; border-radius: 2px;">
                    {{localize (concat "TYPES.Item." item.type)}}
                </span>
                {{#if subtitle}} - {{subtitle}}{{/if}}
            </div>
        </div>
    </header>

    <div class="card-content-wrapper">
        {{!-- 2. 关键属性标签 --}}
        {{#if properties}}
        <div class="card-tags">
            {{#each properties as |prop|}}
            {{!-- AI 优化的 data-value 属性保留，这很好，用于 CSS 染色 --}}
            <span data-value="{{prop.value}}">
                {{#if prop.label}}<strong>{{prop.label}}:</strong>{{/if}} {{prop.value}}
            </span>
            {{/each}}
        </div>
        {{/if}}

        {{!-- 3. 描述 --}}
        <div class="card-description">
            {{{system.description}}}
        </div>

        {{!-- 3.5 自定义内容 --}}
        {{#if customContent}}
        <div class="card-custom-content" style="margin-bottom: 5px;">
            {{{customContent}}}
        </div>
        {{/if}}

        {{!-- 4. 自动化说明 --}}
        {{#if system.automationNote}}
        <div style="margin-top: 5px; border-top: 1px dashed #ccc; padding-top: 5px; font-size: 0.85em; color: #2c3e50;">
            <i class="fas fa-robot"></i> <b>{{localize "XJZL.AutomationNote"}}:</b> {{system.automationNote}}
        </div>
        {{/if}}

        {{!-- 5. 内功圆满特效 --}}
        {{#if system.masteryEffect}}
        <div style="margin-top: 5px; border-top: 1px solid var(--xjzl-gold); padding-top: 5px; color: #8b6d3f;">
            <i class="fas fa-crown"></i> <b>{{localize "XJZL.Neigong.MasteryEffect"}}:</b>
            <div style="font-size: 0.9em; margin-top: 2px;">{{{system.masteryEffect}}}</div>
        </div>
        {{/if}}

        {{!-- 6. 消耗品脚本提示 --}}
        {{#if system.usageScript}}
        <div style="margin-top: 5px; border-top: 1px dashed #ccc; padding-top: 5px; font-size: 0.85em; color: #555;">
            <i class="fas fa-code"></i> <b>脚本:</b> 已配置使用逻辑
        </div>
        {{/if}}
    </div>
</div>