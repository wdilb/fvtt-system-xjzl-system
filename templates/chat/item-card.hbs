<div class="xjzl-chat-card" data-item-id="{{item.id}}">
    {{!-- 头部 --}}
    <header class="card-header flexrow" style="border-bottom: 2px solid var(--xjzl-gold); padding-bottom: 5px; margin-bottom: 5px; align-items: center;">
        <img src="{{item.img}}" title="{{item.name}}" width="36" height="36" style="border:1px solid #000; margin-right: 5px;"/>
        <h3 class="item-name" style="margin: 0; font-weight: 900; border: none; color: #8b0000;">{{item.name}}</h3>
    </header>

    {{!-- 描述区域 --}}
    <div class="card-content" style="font-size: 0.9em; color: #333; margin-bottom: 10px;">
        {{{item.system.description}}}
    </div>

    {{!-- 效果标签 (Tags) --}}
    {{#if tags.length}}
    <div class="card-tags" style="display: flex; flex-wrap: wrap; gap: 4px; margin-bottom: 10px;">
        {{#each tags as |tag|}}
        <span style="background: #eee; border: 1px solid #ccc; padding: 2px 6px; border-radius: 4px; font-size: 0.8em;">
            {{tag}}
        </span>
        {{/each}}
    </div>
    {{/if}}

    {{!-- 结果文本 (恢复了多少血，学会了什么) --}}
    {{#if resultText}}
    <div class="card-result" style="background: rgba(0,0,0,0.05); padding: 5px; border-radius: 4px; border-left: 3px solid var(--xjzl-accent);">
        <b>{{localize "XJZL.UI.Chat.ItemCard.Effect"}}：</b> {{resultText}}
    </div>
    {{/if}}

    {{!-- 脚本/特殊效果输出 --}}
    {{#if scriptOutput}}
    <div class="card-script-result" style="margin-top: 5px; font-style: italic; color: #555;">
        {{scriptOutput}}
    </div>
    {{/if}}
</div>