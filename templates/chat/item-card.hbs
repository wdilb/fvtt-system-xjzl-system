<div class="xjzl-chat-card" data-item-id="{{item.id}}">
    <header class="card-header" style="border-left: 4px solid var(--c-cinnabar);">
        <img src="{{item.img}}" />
        <h3 style="color: var(--c-cinnabar);">{{item.name}}</h3>
    </header>

    <div class="card-content-wrapper">
        <div class="card-description">{{{item.system.description}}}</div>

        {{#if tags.length}}
        <div class="card-tags">
            {{#each tags as |tag|}}<span>{{tag}}</span>{{/each}}
        </div>
        {{/if}}

        {{#if resultText}}
        <div
            style="background: rgba(0,0,0,0.05); padding: 8px; border-radius: 4px; border-left: 3px solid var(--xjzl-accent);">
            <b>效果:</b> {{resultText}}
        </div>
        {{/if}}

        {{#if scriptOutput}}
        <div style="margin-top: 5px; font-style: italic; color: #555;">{{scriptOutput}}</div>
        {{/if}}
    </div>
</div>