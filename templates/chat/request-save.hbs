<div class="xjzl-chat-card request-card">
    <header class="card-header" style="border-left: 4px solid #27ae60;">
        <img src="{{targetImg}}" />
        <div>
            <h3 style="color: #27ae60;">{{localize "XJZL.UI.Chat.RequestSave.Title"}}</h3>
            <div style="font-size: 0.8em; color: #555;">{{localize "XJZL.UI.Chat.RequestSave.Subtitle"}} -
                {{targetName}}</div>
        </div>
    </header>

    <div class="card-content-wrapper">
        <div class="card-description">
            {{{localize "XJZL.UI.Chat.RequestSave.Description" attacker=attackerName defender=targetName
            attr=attrLabel}}}
        </div>

        <div class="card-stats">
            <div class="stat-block">
                <div class="stat-label">{{localize "XJZL.UI.Chat.RequestSave.DC"}}</div>
                <div class="stat-value" style="color: #c0392b;">{{dc}}</div>
                <div style="font-size: 0.7em; color: #888;">{{attrLabel}} vs DC</div>
            </div>
        </div>

        <div class="card-buttons">
            <button data-action="rollSave" class="btn-heal">
                <i class="fas fa-dice"></i> {{localize "XJZL.UI.Chat.RequestSave.RollBtn" attr=attrLabel}}
            </button>
        </div>
    </div>
</div>