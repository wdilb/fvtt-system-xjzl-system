<section class="tab scroll-area {{#if (eq tabs.primary 'jingmai')}}active{{/if}}" 
         data-tab="jingmai" 
         data-group="primary">

    {{!-- 1. 十二正经 (Standard) --}}
    <div class="xjzl-card">
        <div class="xjzl-card-header">{{localize "XJZL.Jingmai.Label"}} (十二正经)</div>
        
        <div class="xjzl-grid-2">
            {{!-- 遍历 standard 下的所有经脉 --}}
            {{#each system.jingmai.standard as |val key|}}
            <div style="display: flex; align-items: center; padding: 5px;">
                {{!-- 复选框 --}}
                <input type="checkbox" name="system.jingmai.standard.{{key}}" {{checked val}} style="margin-right: 8px;"/>
                
                <div class="xjzl-flex-col" style="gap: 0;">
                    {{!-- 经脉名称 --}}
                    <span style="font-weight: bold;">
                        {{localize (concat "XJZL.Jingmai." (capitalize key))}}
                    </span>
                    {{!-- 这里未来可以加特效描述 --}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    {{!-- 2. 奇经八脉 (Extra) --}}
    <div class="xjzl-card" style="margin-top: 10px;">
        <div class="xjzl-card-header">{{localize "XJZL.Jingmai.Extra"}}</div>
        
        <div class="xjzl-grid-2">
            {{#each system.jingmai.extra as |val key|}}
            <div style="display: flex; align-items: center; padding: 5px;">
                <input type="checkbox" name="system.jingmai.extra.{{key}}" {{checked val}} style="margin-right: 8px;"/>
                <span>{{localize (concat "XJZL.Jingmai." (capitalize key))}}</span>
            </div>
            {{/each}}
        </div>
    </div>

    {{!-- 3. 生死玄关 --}}
    <div class="xjzl-card" style="margin-top: 10px; border-color: var(--xjzl-gold);">
        <div class="xjzl-card-header" style="color: var(--xjzl-gold) !important;">{{localize "XJZL.Jingmai.Xuanguan"}}</div>
        <div style="text-align: center; padding: 10px;">
            <label style="font-size: 1.2em; margin-right: 10px;">是否打通生死玄关?</label>
            <input type="checkbox" name="system.jingmai.xuanguan.broken" {{checked system.jingmai.xuanguan.broken}}/>
            <p style="font-size: 0.9em; color: #666; margin-top: 5px;">打通后悟性上限提升，且获得大量属性加成。</p>
        </div>
    </div>

</section>