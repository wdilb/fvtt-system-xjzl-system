<section class="tab scroll-area {{#if (eq tabs.primary 'cultivation')}}active{{/if}}" 
         data-tab="cultivation" 
         data-group="primary">

    <div class="xjzl-card xjzl-flex-row" style="justify-content: space-between; margin-bottom: 10px;">
        <label style="font-size: 1.2em; font-weight: bold;">{{localize "XJZL.Cultivation.General"}}</label>
        <input type="number" name="system.cultivation.general" value="{{system.cultivation.general}}" class="xjzl-input" style="width: 100px; font-size: 1.2em;"/>
    </div>

    <h3>{{localize "XJZL.TYPES.Item.neigong"}}</h3>
    <div class="xjzl-flex-col">
        {{#each neigongs as |item|}}
        <div class="xjzl-card neigong-item xjzl-flex-row {{#if item.isRunning}}active{{/if}}">
            <img src="{{item.img}}" width="48" height="48" style="border-radius: 4px;"/>
            <div class="xjzl-grow xjzl-flex-col" style="gap: 2px;">
                <div class="xjzl-flex-row">
                    <span style="font-weight: bold;">{{item.name}}</span>
                    <span style="font-size: 0.8em; background: #333; color: white; padding: 0 4px; border-radius: 4px;">{{localize (concat "XJZL.Neigong.Stage" item.system.stage)}}</span>
                </div>
                <div style="font-size: 0.8em;">
                    已投入: {{item.system.xpInvested}} / {{item.system.progressData.max}} ({{item.system.progressData.pct}}%)
                </div>
            </div>
            <div class="xjzl-flex-col">
                <button type="button" data-action="toggleNeigong" data-item-id="{{item.id}}" style="font-size: 0.8em; {{#if item.isRunning}}color:#c5a059; font-weight:bold;{{/if}}">
                    <i class="fas fa-power-off"></i> {{#if item.isRunning}}停止{{else}}运功{{/if}}
                </button>
                <button type="button" data-action="investXP" data-item-id="{{item.id}}" style="font-size: 0.8em;">修炼</button>
            </div>
            <a data-action="edit" data-document-id="{{item.id}}" style="margin-left: 5px; color: var(--xjzl-ink-500); cursor:pointer;"><i class="fas fa-edit"></i></a>
        </div>
        {{else}}
        <p style="text-align: center; color: #777;">暂无内功，请从物品栏拖入。</p>
        {{/each}}
    </div>
</section>