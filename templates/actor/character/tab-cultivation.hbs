<section class="tab scroll-area {{#if (eq tabs.primary 'cultivation')}}active{{/if}}" 
         data-tab="cultivation" 
         data-group="primary">

    {{!-- 1. 通用修为栏 --}}
    <div class="xjzl-card xjzl-flex-row" style="justify-content: space-between; margin-bottom: 10px; background: rgba(255, 255, 255, 0.8); border: 1px solid var(--xjzl-gold);">
        <label style="font-size: 1.2em; font-weight: bold; color: var(--xjzl-ink-800);">
            <i class="fas fa-database"></i> {{localize "XJZL.Cultivation.General"}}
        </label>
        <div class="xjzl-flex-row">
            <input type="number" name="system.cultivation.general" value="{{system.cultivation.general}}" class="xjzl-input" style="width: 100px; font-size: 1.4em; font-weight: 900; color: var(--xjzl-accent) !important; background: transparent;"/>
        </div>
    </div>

    {{!-- 2. 子标签导航 (Sub Tabs) --}}
    <div class="xjzl-flex-row" style="margin-bottom: 10px; border-bottom: 2px solid var(--xjzl-ink-500);">
        <a class="xjzl-tab-item {{#if (eq cultivationSubTab 'neigong')}}active{{/if}}" 
           data-action="toggleSubTab" data-target="neigong"
           style="flex: 1; text-align: center; padding: 5px; font-weight: bold;">
           {{localize "TYPES.Item.neigong"}}
        </a>
        <a class="xjzl-tab-item {{#if (eq cultivationSubTab 'wuxue')}}active{{/if}}" 
           data-action="toggleSubTab" data-target="wuxue"
           style="flex: 1; text-align: center; padding: 5px; font-weight: bold;">
           {{localize "TYPES.Item.wuxue"}}
        </a>
    </div>

    {{!-- 3. 内容区域：根据子标签显示 --}}
    
    {{!-- A. 内功列表 --}}
    {{#if (eq cultivationSubTab 'neigong')}}
    <div class="xjzl-grid-2">
        {{#each neigongs as |item|}}
        <div class="xjzl-card neigong-item {{#if item.isRunning}}active{{/if}}">
            <div style="display: flex; gap: 10px;">
                <a class="item-icon" data-action="editItem" data-item-id="{{item.id}}" title="编辑">
                    <img src="{{item.img}}"/>
                    {{#if item.isRunning}}<i class="fas fa-certificate status-icon"></i>{{/if}}
                </a>
                <div style="flex: 1; display: flex; flex-direction: column; gap: 3px; overflow: hidden;">
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span class="item-name" style="font-weight: bold;">{{item.name}}</span>
                        <a data-action="deleteItem" data-item-id="{{item.id}}" title="删除" style="color: #888;"><i class="fas fa-times"></i></a>
                    </div>
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span class="stage-tag">{{localize (concat "XJZL.Neigong.Stage" item.system.stage)}}</span>
                        <span style="font-size: 0.7em; color: #aaa;">
                            {{#if item.system.progressData.isMastered}}MAX{{else}}{{item.system.progressData.current}}/{{item.system.progressData.max}}{{/if}}
                        </span>
                    </div>
                    <div class="progress-bar">
                        <div class="fill" style="width: {{item.system.progressData.pct}}%;"></div>
                    </div>
                </div>
            </div>
            <div class="button-group">
                <button type="button" data-action="toggleNeigong" data-item-id="{{item.id}}" class="{{#if item.isRunning}}active-btn{{/if}}">
                    <i class="fas fa-power-off"></i> {{#if item.isRunning}}运行中{{else}}运功{{/if}}
                </button>
                <button type="button" class="btn-refund" data-action="refundXP" data-item-id="{{item.id}}" title="散功"><i class="fas fa-undo"></i></button>
                {{#if item.system.progressData.isMastered}}
                    <button type="button" class="btn-invest mastered" disabled><i class="fas fa-crown"></i> 圆满</button>
                {{else}}
                    <button type="button" class="btn-invest" data-action="investXP" data-item-id="{{item.id}}"><i class="fas fa-arrow-up"></i> 修炼</button>
                {{/if}}
            </div>
        </div>
        {{else}}
        <div style="grid-column: 1 / -1; text-align: center; color: #999; padding: 20px;">暂无内功</div>
        {{/each}}
    </div>
    {{/if}}

    {{!-- B. 武学列表 --}}
    {{#if (eq cultivationSubTab 'wuxue')}}
    <div class="xjzl-grid-2">
        {{#each wuxues as |item|}}
        <div class="xjzl-card neigong-item" style="padding: 0; display: flex; flex-direction: column; gap: 0; overflow: hidden; background: rgba(30,30,30,0.9);">
            
            {{!-- 1. 头部 (Item) --}}
            <div class="wuxue-header" style="padding: 8px; display: flex; align-items: center; gap: 8px; background: rgba(255,255,255,0.05);">
                <div class="item-icon-container" style="flex: 0 0 40px; height: 40px; border-radius: 4px; overflow: hidden; border: 1px solid #666; cursor:pointer;"
                     onclick="$(this).closest('.neigong-item').find('.wuxue-moves').toggleClass('hidden')">
                    <img src="{{item.img}}" style="width: 100%; height: 100%; object-fit: cover; border: none;"/>
                </div>

                <div class="xjzl-flex-col xjzl-grow" style="gap: 2px; overflow: hidden; cursor:pointer;"
                     onclick="$(this).closest('.neigong-item').find('.wuxue-moves').toggleClass('hidden')">
                    <div style="font-weight: bold; font-size: 1.1em; color: #fff; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{item.name}}</div>
                    <div style="font-size: 0.8em; color: #aaa;">{{item.system.sect}} | {{item.system.moves.length}} 招 <i class="fas fa-chevron-down"></i></div>
                </div>

                <div class="header-actions" style="display: flex; gap: 5px;">
                    <a data-action="editItem" data-item-id="{{item.id}}" title="编辑武学" class="action-btn"><i class="fas fa-edit"></i></a>
                    <a data-action="deleteItem" data-item-id="{{item.id}}" title="删除武学" class="action-btn delete"><i class="fas fa-trash"></i></a>
                </div>
            </div>

            {{!-- 2. 招式列表 (Moves) --}}
            <div class="wuxue-moves hidden" style="background: rgba(0,0,0,0.3); border-top: 1px solid #555; padding: 0 8px 8px 8px;">
                {{#each item.system.moves as |move|}}
                <div class="move-row" style="border-bottom: 1px dashed #444; padding: 8px 0; display: flex; flex-direction: column; gap: 5px;">
                    
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span style="color: #ddd; font-weight: bold; font-size: 1em;">
                            <i class="fas fa-bolt" style="font-size:0.8em; color:#666; margin-right:4px;"></i>{{move.name}}
                        </span>
                        
                        <div style="text-align: right;" title="预估伤害">
                            <span style="font-size: 1.2em; color: var(--xjzl-accent); font-weight: 900;">
                                {{move.derived.damage}}
                            </span>
                            {{#if move.derived.neigongBonus}}
                            <span style="font-size: 0.7em; color: var(--xjzl-gold);">{{move.derived.neigongBonus}}</span>
                            {{/if}}
                        </div>
                    </div>

                    <div style="display: flex; justify-content: space-between; font-size: 0.75em; color: #999;">
                        
                        {{!-- 左侧：阶段名 + 相对进度 --}}
                        <span style="background:#222; padding:1px 4px; border-radius:3px; border:1px solid #444;">
                            {{!-- 1. 阶段名: 领悟/掌握/精通 --}}
                            <span style="color: var(--xjzl-gold); font-weight: bold;">
                                {{localize (concat "XJZL.Neigong.Stage" move.computedLevel)}}
                            </span> 
                            
                            {{!-- 2. 进度: 0/500 --}}
                            <span style="color:#aaa; margin-left: 4px;">
                                {{#if move.progress.isMax}}
                                    MAX
                                {{else}}
                                    {{move.progress.current}} / {{move.progress.max}}
                                {{/if}}
                            </span>
                        </span>

                        {{!-- 右侧：消耗 --}}
                        <span>
                            {{#if move.derived.cost.mp}}<span style="color:#88caff;">MP:{{move.derived.cost.mp}}</span> {{/if}}
                            {{#if move.derived.cost.rage}}<span style="color:#ffca88;">怒:{{move.derived.cost.rage}}</span>{{/if}}
                            {{#if move.derived.cost.hp}}<span style="color:#ff8888;">血:{{move.derived.cost.hp}}</span>{{/if}}
                        </span>
                    </div>

                    <div style="display: flex; gap: 5px; margin-top: 2px;">
                        {{!-- 【修复】：使用 ../id 引用 Item ID (父级上下文) --}}
                        <button type="button" data-action="rollMove" data-item-id="{{../id}}" data-move-id="{{move.id}}" 
                                class="move-btn roll" title="点击施放">
                            <i class="fas fa-dice-d20"></i> 招式
                        </button>

                        <button type="button" data-action="refundMoveXP" data-item-id="{{../id}}" data-move-id="{{move.id}}" 
                                class="move-btn refund" title="散功">
                            <i class="fas fa-undo"></i>
                        </button>

                        {{#if move.progress.isMax}}
                            <button type="button" class="move-btn mastered" disabled>
                                <i class="fas fa-check"></i> 圆满
                            </button>
                        {{else}}
                            <button type="button" data-action="investMoveXP" data-item-id="{{../id}}" data-move-id="{{move.id}}" 
                                    class="move-btn invest" title="修炼">
                                <i class="fas fa-arrow-up"></i> 修炼
                            </button>
                        {{/if}}
                    </div>

                </div>
                {{else}}
                <div style="text-align: center; color: #666; font-size: 0.8em; padding: 10px;">暂无招式</div>
                {{/each}}
            </div>

        </div>
        {{else}}
        <div style="grid-column: 1 / -1; text-align: center; color: #999; padding: 20px;">暂无武学</div>
        {{/each}}
    </div>
    {{/if}}

</section>