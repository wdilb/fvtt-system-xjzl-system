<div class="audit-log-container">

    <!-- 1. 顶部筛选 -->
    <div class="audit-header-area">
        <div class="audit-hint">
            <i class="fas fa-history"></i>
            <span>{{localize "XJZL.History.HeaderHint"}}</span>
        </div>

        <div class="audit-filters">
            <!-- 文本搜索 -->
            <div class="audit-search-box">
                <i class="fas fa-search"></i>
                <input type="text" class="audit-filter-input" placeholder="{{localize 'XJZL.History.SearchPlaceholder'}}" />
            </div>
            <!-- 日期筛选 -->
            <div class="audit-date-box">
                <input type="date" class="audit-date-input" />
            </div>
        </div>
    </div>

    <!-- 2. 滚动列表 -->
    <div class="audit-list-area">
        {{#each history as |entry|}}
        <div class="audit-entry {{entry.cssClass}}" data-search="{{entry.searchTerm}}" data-date="{{entry.dateStr}}">

            <div class="audit-row-top">
                <span class="audit-title">{{entry.title}}</span>
                <span class="audit-time">{{entry.realTimeStr}}</span>
            </div>

            <div class="audit-row-mid">
                <span>{{entry.gameDateDisplay}}</span>
                <span class="audit-delta {{entry.deltaClass}}">{{entry.delta}}</span>
            </div>

            <div class="audit-reason">
                {{entry.reason}}
                <span style="float:right; opacity:0.3; font-size:10px;">[{{entry.balance}}]</span>
            </div>
        </div>
        {{else}}
        <div class="audit-empty">{{localize "XJZL.History.Empty"}}</div>
        {{/each}}
    </div>

</div>