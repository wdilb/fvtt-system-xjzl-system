<section class="tab scroll-area {{#if (eq tabs.primary 'combat')}}active{{/if}}" data-tab="combat" data-group="primary">

    {{!-- 当前架招 (Current Stance) --}}
    <div class="xjzl-card stance-card" style="margin-bottom: 15px;">
        <div class="xjzl-card-header" style="display: flex; align-items: center; justify-content: space-between;">
            <span>{{localize "XJZL.Martial.Stance"}}</span>
        </div>

        {{#if system.martial.stanceActive}}
        {{!-- A. 已开启架招 --}}
        <div style="background: #2c3e50; border-radius: 4px; padding: 5px;">

            {{!-- 标题行 --}}
            <div style="display: flex; align-items: center; justify-content: space-between;">
                <div style="display: flex; align-items: center; gap: 8px;">
                    <i class="fas fa-shield-alt" style="color: #3498db; font-size: 1.2em;"></i>
                    <span style="font-weight: bold; color: white; font-size: 1.1em;">
                        {{activeStance.name}}
                    </span>
                </div>

                {{!-- 解除按钮 --}}
                <a data-action="stopStance" title="{{localize 'XJZL.Martial.StopStance'}}"
                    style="color: #bdc3c7; cursor: pointer;">
                    <i class="fas fa-times-circle"></i>
                </a>
            </div>

            {{!-- 详情与说明 (可折叠) --}}
            {{#if (or activeStance.description activeStance.automationNote)}}
            <details style="margin-top: 5px; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 5px;">
                <summary style="color: #bdc3c7; font-size: 0.8em; cursor: pointer; outline: none;">
                    <i class="fas fa-info-circle"></i> {{localize "XJZL.UI.Chat.MoveCard.ShowDetails"}}
                </summary>
                <div style="margin-top: 5px; color: #ecf0f1; font-size: 0.9em; line-height: 1.4; padding: 0 5px;">
                    {{#if activeStance.description}}
                    <div style="font-style: italic; margin-bottom: 5px; opacity: 0.9;">
                        {{{activeStance.description}}}
                    </div>
                    {{/if}}

                    {{#if activeStance.automationNote}}
                    <div
                        style="border-top: 1px dashed rgba(255,255,255,0.2); padding-top: 4px; margin-top: 4px; color: #81ecec;">
                        <i class="fas fa-robot"></i> <b>{{localize "XJZL.Wuxue.AutomationNote"}}:</b>
                        {{activeStance.automationNote}}
                    </div>
                    {{/if}}
                </div>
            </details>
            {{/if}}

        </div>
        {{else}}
        {{!-- B. 未开启架招 --}}
        <div style="text-align: center; color: #7f8c8d; font-style: italic; font-size: 0.9em; padding: 5px;">
            {{localize "XJZL.Martial.NoStance"}}
        </div>
        {{/if}}
    </div>

    <div class="xjzl-grid-2">
        {{!-- 基础战斗 --}}
        <div class="xjzl-card">
            <div class="xjzl-card-header">{{localize "XJZL.Combat.Label"}}</div> {{!-- 战斗面板 --}}
            <div class="xjzl-grid-2">
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.Block"}}</label> {{!-- 格挡 --}}
                    <b>{{system.combat.blockTotal}}</b>
                </div>
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.Kanpo"}}</label> {{!-- 看破 --}}
                    <b>{{system.combat.kanpoTotal}}</b>
                </div>
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.Speed"}}</label> {{!-- 速度 --}}
                    <b>{{system.combat.speedTotal}}</b>
                </div>
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.Dodge"}}</label> {{!-- 闪避 --}}
                    <b>{{system.combat.dodgeTotal}}</b>
                </div>
            </div>
        </div>

        {{!-- 攻防修正 --}}
        <div class="xjzl-card">
            <div class="xjzl-card-header">{{localize "XJZL.Combat.Damages"}}</div> {{!-- 这里暂借伤害/修正的标题 --}}
            <div class="xjzl-grid-2">
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.DefWaigong"}}</label>
                    <b>{{system.combat.defWaigongTotal}}</b>
                </div>
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.DefNeigong"}}</label>
                    <b>{{system.combat.defNeigongTotal}}</b>
                </div>
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.HitWaigong"}}</label>
                    <b>{{system.combat.hitWaigongTotal}}</b>
                </div>
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.HitNeigong"}}</label>
                    <b>{{system.combat.hitNeigongTotal}}</b>
                </div>
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.CritWaigong"}}</label>
                    <b>{{system.combat.critWaigongTotal}}</b>
                </div>
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.CritNeigong"}}</label>
                    <b>{{system.combat.critNeigongTotal}}</b>
                </div>
            </div>
        </div>

        {{!-- 伤害修正 --}}
        <div class="xjzl-card">
            <div class="xjzl-card-header">{{localize "XJZL.Combat.Dmg.Global"}}</div> {{!-- 伤害 --}}
            <div class="xjzl-grid-2">
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.Dmg.Skill"}}</label>
                    <b>{{system.combat.damages.skill.total}}</b>
                </div>
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.Dmg.Yang"}}</label>
                    <b>{{system.combat.damages.yang.total}}</b>
                </div>
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.Dmg.Yin"}}</label>
                    <b>{{system.combat.damages.yin.total}}</b>
                </div>
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.Dmg.Gang"}}</label>
                    <b>{{system.combat.damages.gang.total}}</b>
                </div>
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.Dmg.Rou"}}</label>
                    <b>{{system.combat.damages.rou.total}}</b>
                </div>
            </div>
        </div>
        {{!-- 消耗减少 --}}
        <div class="xjzl-card">
            <div class="xjzl-card-header">{{localize "XJZL.Combat.ReduceCost"}}</div> {{!-- 伤害 --}}
            <div class="xjzl-grid-2">
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.Cost.Neili"}}</label>
                    <b>{{system.combat.costs.neili.total}}</b>
                </div>
                <div style="justify-content: space-between;">
                    <label>{{localize "XJZL.Combat.Cost.Rage"}}</label>
                    <b>{{system.combat.costs.rage.total}}</b>
                </div>
            </div>
        </div>
    </div>
</section>