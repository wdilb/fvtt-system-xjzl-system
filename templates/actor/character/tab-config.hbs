{{!-- templates/actor/character/tab-config.hbs --}}
<section class="tab scroll-area {{#if (eq tabs.primary 'config')}}active{{/if}}" data-tab="config" data-group="primary">

    {{!-- 手动修正模块 --}}
    <div class="xjzl-group-header flexrow">
        <label><i class="fas fa-sliders-h"></i> {{localize "XJZL.Modifier.Label"}}</label>
        <a class="item-control" data-action="addGroup" title="{{localize 'XJZL.UI.CreateNew'}}">
            <i class="fas fa-folder-plus"></i> {{localize "XJZL.UI.CreateNew"}}
        </a>
    </div>

    <div class="xjzl-modifiers-container">
        {{#each system.customModifiers as |group i|}}
        <div class="modifier-group">
            {{!-- 组标题栏 --}}
            <div class="group-header flexrow">
                <div class="group-controls">
                    <input type="checkbox" name="system.customModifiers.{{i}}.enabled" {{checked group.enabled}} 
                           title="{{localize 'XJZL.Modifier.ToggleGroup'}}"/>
                </div>
                <div class="group-name">
                    <input type="text" name="system.customModifiers.{{i}}.name" value="{{group.name}}" 
                           placeholder="{{localize 'XJZL.Modifier.NamePlaceholder'}}"/>
                </div>
                <div class="group-actions">
                    <a data-action="addChange" data-group-index="{{i}}" title="{{localize 'XJZL.Modifier.AddChange'}}"><i class="fas fa-plus"></i></a>
                    <a data-action="deleteGroup" data-index="{{i}}" title="{{localize 'XJZL.Modifier.DeleteGroup'}}" class="delete"><i class="fas fa-trash"></i></a>
                </div>
            </div>

            {{!-- 组内条目列表 --}}
            <div class="group-changes {{#unless group.enabled}}disabled{{/unless}}">
                {{#each group.changes as |change j|}}
                <div class="change-row flexrow">
                    <div class="col-key">
                        {{!-- 使用新的 Helper 来渲染带分组的 Select --}}
                        <select name="system.customModifiers.{{i}}.changes.{{j}}.key">
                            {{selectOptionsGrouped @root.groupedModifierOptions selected=change.key}}
                        </select>
                    </div>
                    <div class="col-val">
                        <input type="number" name="system.customModifiers.{{i}}.changes.{{j}}.value" value="{{change.value}}"/>
                    </div>
                    <div class="col-del">
                        <a data-action="deleteChange" data-group-index="{{i}}" data-change-index="{{j}}" class="delete">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{else}}
        <div class="empty-hint" style="text-align:center; padding:20px; color:#888; font-style:italic;">
            {{localize "XJZL.Modifier.Empty"}}
        </div>
        {{/each}}
    </div>

</section>