<div class="xp-manager-wrapper">
    <!-- 提示信息 -->
    <p class="hint-text">
        <i class="fas fa-edit"></i>
        手动修改修为池余额并生成审计日志。
    </p>

    <!-- 第一行：目标池 + 数值 -->
    <div class="form-row split-2-1">
        <div class="form-group">
            <label>目标池</label>
            <select name="poolKey" autofocus>
                {{selectOptions poolChoices selected="general"}}
            </select>
        </div>
        <div class="form-group">
            <label>变动数值 (+/-)</label>
            <input type="number" name="amount" placeholder="例如: 100" required />
        </div>
    </div>

    <!-- 第二行：标题 + 时间 -->
    <div class="form-row split-1-1">
        <div class="form-group">
            <label>事件标题</label>
            <input type="text" name="title" value="{{defaultTitle}}" />
        </div>
        <div class="form-group">
            <label>游戏时间 (可选)</label>
            <input type="text" name="gameDate" placeholder="例如: 乾元三年冬" />
        </div>
    </div>

    <!-- 第三行：备注 -->
    <div class="form-group full-width">
        <label>备注详情</label>
        <input type="text" name="reason" placeholder="例如: DM奖励，或 闭关十年..." />
    </div>

    <!-- 底部按钮 -->
    <footer class="sheet-footer">
        <button type="submit" class="execute-btn">
            <i class="fas fa-check"></i> 执行
        </button>
    </footer>
</div>