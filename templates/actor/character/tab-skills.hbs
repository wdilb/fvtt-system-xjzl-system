<section class="tab scroll-area {{#if (eq tabs.primary 'skills')}}active{{/if}}" 
         data-tab="skills" 
         data-group="primary">

    <div class="xjzl-bg-deco">技</div>

    {{!-- 1. 技艺区 (Arts) --}}
    <div class="section-title-row">
        <span class="title-text">{{localize "XJZL.Arts.Label"}}</span>
        <span class="title-line"></span>
    </div>

    {{#if learnedArts.length}}
        <div class="arts-grid-container">
            {{#each learnedArts as |art|}}
            <div class="art-token-card rollable" data-action="rollAttribute" data-key="{{art.key}}">
                <div class="art-icon">
                    <span class="art-char">{{#if art.label}}{{substring (localize art.label) 0 1}}{{else}}艺{{/if}}</span>
                </div>
                <div class="art-details">
                    <div class="art-name">{{localize art.label}}</div>
                    {{#if art.identity}}
                    <div class="art-identity" data-tooltip="{{art.identity.tooltip}}">
                        <i class="fas fa-certificate"></i> {{art.identity.title}}
                    </div>
                    {{else}}
                    <div class="art-identity empty">初窥门径</div>
                    {{/if}}
                </div>
                <div class="art-level-box">
                    <span class="val">Lv.{{art.total}}</span>
                </div>
            </div>
            {{/each}}
        </div>
    {{else}}
        <div class="empty-arts-hint">
            <i class="fas fa-leaf"></i> 初入江湖，尚无一技傍身
        </div>
    {{/if}}

    <div class="spacer-block"></div>

    {{!-- 2. 技能区 (Skills) --}}
    <div class="section-title-row">
        <span class="title-text">{{localize "XJZL.Skills.Label"}}</span>
        <span class="title-line"></span>
    </div>

    {{!-- A. 悟性特权区 --}}
    <div class="wuxing-container">
        <div class="wuxing-header rollable" data-action="rollAttribute" data-key="{{wuxingGroup.key}}"
             data-tooltip="点击检定: {{localize wuxingGroup.label}}">
            <div class="wuxing-icon"><i class="fas fa-brain"></i></div>
            <div class="wuxing-title">{{localize wuxingGroup.label}}</div>
            <div class="wuxing-val">{{lookup (lookup @root.system.stats wuxingGroup.key) 'total'}}</div>
        </div>

        <div class="wuxing-skills-grid">
            {{#each wuxingGroup.skills as |skillKey|}}
            <a class="skill-pill-box rollable" data-action="rollAttribute" data-key="{{skillKey}}">
                <span class="skill-name">{{localize (concat "XJZL.Skills." (capitalize skillKey))}}</span>
                {{!-- [修复] 使用 @root.system.skills 绝对路径 --}}
                <span class="skill-val">
                    {{#with (lookup (lookup @root.system.skills skillKey) 'total') as |val|}}
                        {{val}}
                    {{else}}0{{/with}}
                </span>
            </a>
            {{/each}}
        </div>
    </div>

    {{!-- B. 常规六维 --}}
    <div class="skills-grid-3col">
        {{#each standardSkillGroups as |group|}}
        <div class="skill-group-card">
            {{!-- 属性标题 --}}
            <div class="group-header rollable" data-action="rollAttribute" data-key="{{group.key}}"
                 data-tooltip="点击检定: {{localize group.label}}">
                <span class="attr-name">{{localize group.label}}</span>
                {{!-- [修复] 使用 @root.system.stats --}}
                <span class="attr-val">{{lookup (lookup @root.system.stats group.key) 'total'}}</span>
            </div>

            {{!-- 技能列表 --}}
            <div class="skill-list">
                {{#each group.skills as |skillKey|}}
                <div class="skill-row">
                    <a class="skill-name rollable" data-action="rollAttribute" data-key="{{skillKey}}">
                        {{localize (concat "XJZL.Skills." (capitalize skillKey))}}
                    </a>
                    {{!-- [修复] 使用 @root.system.skills --}}
                    <span class="skill-val">
                        {{#with (lookup (lookup @root.system.skills skillKey) 'total') as |val|}}
                            {{val}}
                        {{else}}0{{/with}}
                    </span>
                </div>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>

    <div class="spacer-block"></div>

    {{!-- 3. 未入门技艺 --}}
    {{#if unlearnedArts.length}}
    <details class="unlearned-arts-box">
        <summary>
            <i class="fas fa-book-open"></i> 查看未入门技艺 ({{unlearnedArts.length}})
            <span class="line"></span>
        </summary>
        <div class="arts-grid-container compact">
            {{#each unlearnedArts as |art|}}
            <div class="art-token-card unlearned rollable" data-action="rollAttribute" data-key="{{art.key}}">
                <div class="art-icon">
                    <span class="art-char">{{#if art.label}}{{substring (localize art.label) 0 1}}{{else}}艺{{/if}}</span>
                </div>
                <div class="art-details">
                    <div class="art-name">{{localize art.label}}</div>
                </div>
                <div class="art-level-box">
                    <span class="val">0</span>
                </div>
            </div>
            {{/each}}
        </div>
    </details>
    {{/if}}

</section>